<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sea1">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/favorite"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/locPicture"
            android:layout_width="302dp"
            android:layout_height="178dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="468dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.676" />

        <TextView
            android:id="@+id/locdescription"
            android:layout_width="341dp"
            android:layout_height="83dp"
            android:layout_gravity="center"
            android:layout_marginStart="35dp"
            android:layout_marginTop="263dp"
            android:layout_marginEnd="35dp"
            android:layout_marginBottom="385dp"
            android:gravity="center"
            android:text="Description"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/addFavorite"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="51dp"
            android:layout_height="42dp"
            android:layout_marginStart="298dp"
            android:layout_marginTop="656dp"
            android:layout_marginEnd="62dp"
            android:layout_marginBottom="33dp"
            android:background="@drawable/favorite3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/removeLocText"
            android:layout_width="65dp"
            android:layout_height="28dp"

            android:layout_marginStart="294dp"
            android:layout_marginTop="632dp"
            android:layout_marginEnd="52dp"
            android:layout_marginBottom="71dp"
            android:text="Favorite"
            android:textColor="#F9FBFB"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="238dp"
            android:layout_height="41dp"
            android:layout_marginStart="66dp"
            android:layout_marginTop="387dp"
            android:layout_marginEnd="107dp"
            android:layout_marginBottom="303dp"
            android:background="#8B909191"
            android:numStars="5"
            android:rating="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1" />

        <Button
            android:id="@+id/submit_button"
            android:layout_width="57dp"
            android:layout_height="44dp"
            android:layout_marginStart="305dp"
            android:layout_marginTop="387dp"
            android:layout_marginEnd="49dp"
            android:layout_marginBottom="300dp"
            android:background="@drawable/submit"
            android:onClick="submitRating"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1" />

        <Button
            android:id="@+id/backHome"
            android:layout_width="55dp"
            android:layout_height="42dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="33dp"
            android:layout_marginEnd="350dp"
            android:layout_marginBottom="656dp"
            android:background="@drawable/backhome"
            android:onClick="submitRating"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1" />

        <TextView
            android:id="@+id/ratingSum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:textColorHint="@color/colorAccent"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/submit_button"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1" />


        <Button
            android:id="@+id/navwithgm"
            android:layout_width="48dp"
            android:layout_height="44dp"
            android:layout_marginStart="181dp"
            android:layout_marginTop="653dp"
            android:layout_marginEnd="182dp"
            android:layout_marginBottom="34dp"
            android:background="@drawable/googlemapsicon"

            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            app:srcCompat="@drawable/googlemapsicon" />

        <TextView
            android:id="@+id/searchtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="178dp"
            android:layout_marginTop="632dp"
            android:layout_marginEnd="177dp"
            android:layout_marginBottom="75dp"
            android:text="Google Map"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/waze_button"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_marginStart="61dp"
            android:layout_marginTop="653dp"
            android:layout_marginEnd="300dp"
            android:layout_marginBottom="33dp"
            android:background="@android:color/transparent"
            android:backgroundTint="#FFFFFF"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/waze_image2" />

        <TextView
            android:id="@+id/WazeText"
            android:layout_width="49dp"
            android:layout_height="33dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="632dp"
            android:layout_marginEnd="300dp"
            android:layout_marginBottom="69dp"
            android:text="Waze"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.google.android.material.navigation.NavigationView
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/navigation_menu" />

</androidx.drawerlayout.widget.DrawerLayout>
